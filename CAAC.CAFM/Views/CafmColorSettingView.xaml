		                               					 CanUserResizeColumns="False">
                                        <telerik:RadGridView.Columns>
                                            <vm:SerialColumn Header="序号" CellStyle="{StaticResource style}" />
                                            <telerik:GridViewDataColumn Header="运力变化项" IsReadOnly="True"
                                                    DataMemberBinding="{Binding Name}" />
                                            <telerik:GridViewDataColumn Header="对应颜色" Width="100"
                                                    EditTriggers="CellClick" HeaderTextAlignment="Center"
                                                    IsFilterable="False" IsSortable="False"
                                                    DataMemberBinding="{Binding Color}">
                                                <telerik:GridViewDataColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Rectangle Width="100" Height="25">
                                                            <Rectangle.Fill>
                                                                <SolidColorBrush Color="{Binding Color}" />
                                                            </Rectangle.Fill>
                                                        </Rectangle>
                                                    </DataTemplate>
                                                </telerik:GridViewDataColumn.CellTemplate>
                                                <telerik:GridViewDataColumn.CellEditTemplate>
                                                    <DataTemplate>
                                                        <telerik:RadDropDownButton Width="100" Height="25" IsOpen="True"
                                                                telerik:StyleManager.Theme="Windows8">
                                                            <telerik:RadDropDownButton.DropDownContent>
                                                                <telerik:RadColorEditor Width="500" Height="300"
                                                                        SelectedColor="{Binding Color,Mode=TwoWay}"
                                                                        x:Name="coloreditor"
                                                                        PreviousColor="{Binding Color,Mode=OneTime}"
                                                                        HistoryCapacity="8" Padding="12 12 12 33"
                                                                        Margin="0,10,58,0" VerticalAlignment="Top"
                                                                        InitialColor="{Binding Color,Mode=OneTime}"
                                                                        ColorMode="RGB" ToolTipService.ToolTip="调色" />
                                                            </telerik:RadDropDownButton.DropDownContent>
                                                        </telerik:RadDropDownButton>
                                                    </DataTemplate>
                                                </telerik:GridViewDataColumn.CellEditTemplate>
                                            </telerik:GridViewDataColumn>
                                        </telerik:RadGridView.Columns>
                                    </telerik:RadGridView>
                                </Grid>
                            </telerik:RadPane>
                        </telerik:RadPaneGroup>
                    </telerik:RadSplitContainer>
                </telerik:RadDocking>
            </Border>
        </Grid>

    </telerik:RadBusyIndicator>

</UserControl>